<%@ Page Language="C#" AutoEventWireup="true" CodeFile="SpaceSize.aspx.cs" Inherits="Manager_SpaceSize" %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>空间使用</title>
    <meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
    <link href="css/Style.css" rel="stylesheet" type="text/css" />
    <!--使用进度条-->
    <link rel="stylesheet" type="text/css" href="../css/space_normalize.css?400301" />
    <link rel="stylesheet" type="text/css" href="../css/space_demo.css?400301">
    <link rel="stylesheet" href="../css/space_jquery.lineProgressbar.css?400301">
    <style type="text/css">
        .jindu {
            width: 300px;
        }
    </style>
</head>
<body>
    <form id="form1" runat="server">
        <table width="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td width="17" valign="top" background="images/admin_images/mail_leftbg.gif">
                    <img src="images/admin_images/left-top-right.gif" width="17" height="29" />
                </td>
                <td valign="top" background="images/admin_images/content-bg.gif">
                    <table width="100%" height="31" border="0" cellpadding="0" cellspacing="0" class="left_topbg">
                        <tr>
                            <td height="31">

                                <div class="titlebt">
                                    空间使用
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
                <td width="16" valign="top" background="images/admin_images/mail_rightbg.gif">
                    <img src="images/admin_images/nav-right-bg.gif" width="16" height="29" />
                </td>
            </tr>
            <tr>
                <td valign="middle" background="images/admin_images/mail_leftbg.gif">&nbsp;
                </td>
                <td valign="top" bgcolor="#F7F8F9">
                    <!--内容开始-->
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td class="td_left">
                                <asp:Label ID="Lspace" runat="server"></asp:Label>
                                <div class="jindu">
                                    <div id="progressbar"></div>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <!--内容结束-->
                </td>
                <td background="images/admin_images/mail_rightbg.gif">&nbsp;
                </td>
            </tr>
            <tr>
                <td valign="bottom" background="images/admin_images/mail_leftbg.gif">
                    <img src="images/admin_images/buttom_left2.gif" width="17" height="17" />
                </td>
                <td background="images/admin_images/buttom_bgs.gif">
                    <img src="images/admin_images/buttom_bgs.gif" width="17" height="17">
                </td>
                <td valign="bottom" background="images/admin_images/mail_rightbg.gif">
                    <img src="images/admin_images/buttom_right2.gif" width="16" height="17" />
                </td>
            </tr>
        </table>

        <script src="../js/space_jquery-1.11.0.min.js?400301" type="text/javascript"></script>
        <script src="../js/space_jquery.lineProgressbar.js?400301" type="text/javascript"></script>
        <script type="text/javascript">
            $(function () {
                var per =<%=percentage%>;
                if (per > 80) {
                    $('#progressbar').LineProgressbar({
                        percentage: per,
                        fillBackgroundColor: '#d20000',
                        height: '10px',
                        radius: '5px'
                    });
                } else {
                    $('#progressbar').LineProgressbar({
                        percentage: per,
                        fillBackgroundColor: '#00c1de',
                        height: '10px',
                        radius: '5px'
                    });
                }

            })
        </script>
    </form>
</body>
</html>

